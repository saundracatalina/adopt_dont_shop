<h2>Submit your application here!</h2>
<%=form_tag "/applications" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "", required: true %>
  <br>
  <%= label_tag :address, "Street Address" %>
  <%= text_field_tag :address, "", required: true %>
  <br>
  <%= label_tag :city %>
  <%= text_field_tag :city, "", required: true %>
  <br>
  <%= label_tag :state %>
  <%= text_field_tag :state, "", required: true %>
  <br>
  <%= label_tag :zip, "Zip code" %>
  <%= text_field_tag :zip, "", required: true %>
  <br>
  <%= label_tag :description, 'Why would you be a good home for this animal?' %>
  <%= text_field_tag :description, "", required: true %>
  <br>
  <%= submit_tag "Submit Application" %>
<% end %>
